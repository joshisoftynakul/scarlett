<%= form_for ([@podcast, @episode]) do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<br>
	<br>
	<div class="field">
		<%= f.label :rating %>
		<%= f.text_field :rating %>
	</div>

	<br>
	<br>
	
	<div class="field">
		<%= f.label :episode_thumbnail %><br>
		<%= f.file_field :episode_thumbnail %>
	</div>

	<br>
	<br>
	<div class="field">
		<%= f.label :mp3 %><br>
		<%= f.file_field :mp3 %>
	</div>
	<%= f.submit class: "button" %>
<% end %>